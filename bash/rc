#!/bin/sh

source $omb/config/envs.sh
[[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]] && startx
# If not running interactively, don't do anything
[[ $- != *i* ]] && return
source $omb/config/settings.sh
[[ -x /bin/oh-my-posh ]] && source $omb/config/prompt.sh || source '/usr/share/git/git-prompt.sh' && export GIT_PS1_SHOWDIRTYSTATE=1 && export PS1='\[\e[01;34m\]\w$(__git_ps1 " (%s)")\n\[\e[01;34m\]Î»\[\e[00m\] '
source $omb/config/aliases.sh
[[ -x /bin/fzf ]] && source $omb/config/fzf.sh
[[ -x /bin/zoxide ]] && source $omb/config/z.sh
